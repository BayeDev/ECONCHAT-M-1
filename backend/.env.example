# EconChat Backend Environment Variables

# Server
PORT=3001

# LLM Routing (set to 'false' to disable routing and use Claude Sonnet only)
USE_LLM_ROUTING=true

# API Keys
ANTHROPIC_API_KEY=your_anthropic_api_key
GEMINI_API_KEY=your_gemini_api_key

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/econchat

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_xxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxx

# Optional: MCP Server paths (if using local MCP servers)
# IMF_MCP_PATH=/path/to/imf-mcp
# FAO_MCP_PATH=/path/to/fao-mcp
# COMTRADE_MCP_PATH=/path/to/comtrade-mcp
# OWID_MCP_PATH=/path/to/owid-mcp
